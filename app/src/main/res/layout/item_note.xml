<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/notes_item_root"
    android:alpha="0.7"
    android:background="@drawable/abc_popup_background_mtrl_mult"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleColor="?attr/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:paddingBottom="6dp">
        <ImageView
            android:id="@+id/ib_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_more_grey"/>
        <TextView
            android:id="@+id/tv_titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium"
            android:textColor="@color/cardview_dark_background"
            android:layout_toLeftOf="@id/ib_button" />
        <TextView
            android:id="@+id/tv_contentText"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_titleText"
            android:textSize="@dimen/small"
            android:textColor="@color/cardview_dark_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@id/tv_contentText"
            android:layout_width="wrap_content"
            android:textSize="@dimen/small"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>